<style>
body {
    background: #f5f5f5;

    min-height: 100vh;
}
.profile-header {
    transform: translateY(5rem);
}
</style>

<div class="row py-5 px-4">
    <div class="col-xl-4 col-md-6 col-sm-10 mx-auto">

        <!-- Profile widget -->
        <div class="bg-white shadow rounded overflow-hidden">
            <div class="px-4 pt-0 pb-4 bg-dark">
                <div class="media align-items-end profile-header">
                  <a href="#" class="btn btn-outline-light btn-sm btn-block">Edit profile</a></div>
                    <div class="media-body mb-5 text-white">
                        <h4 class="mt-0 mb-4"><%=@user.name%></h4>
                    </div>
                
            </div>

            <div class="bg-light p-4 d-flex justify-content-end text-center">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item my-auto">
                      <%= link_to "New micropost", new_user_micropost_path(@user), class: "btn btn-outline-dark btn-sm btn-block" %>
                    </li>
                    <li class="list-inline-item">
                      <h5 class="font-weight-bold mb-0 d-block"><%=@user.microposts.all.count%></h5><small class="text-muted"> <i class="fa fa-paper-plane mr-1"></i>Microposts</small>
                    </li>
                </ul>
            </div>

            <div class="py-4 px-4">
                <div class="py-4">
                    <h5 class="mb-3">Recent posts</h5>
                    <div class="p-4 bg-light rounded shadow-sm">
                    <%@user.microposts.each do |micropost| %>
                      
                      <p class="h6 mb-0">Title: <%=micropost.title%></p>
                      <p class="font-italic mb-1"><%=micropost.body%></p>
                      
                    <%end%>
                    </div>
                </div>
            </div>

    </div>
</div>