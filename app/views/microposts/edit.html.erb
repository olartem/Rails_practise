<%= stylesheet_link_tag 'login' %>

<div class="signup-form pt-5">
  <%= form_with model:[@user,@micropost], method: :patch do |f| %>
    <h2>Edit micropost</h2>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
        <%= f.text_field :title, autofocus: true, class: "form-control",placeholder: "Title", required: "required" %> 
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.text_field :body, class: "form-control",placeholder: "Micropost", required: "required"%>
      </div>
    </div>
    
    <div class="form-group">
      <div class="actions">
        <%= f.submit "Edit", class: "btn btn-outline-dark btn-block btn-lg"%>
      </div>
    </div>
  <% end %>
</div>