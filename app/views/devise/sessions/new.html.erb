<%= stylesheet_link_tag 'login' %>

<div class="signup-form pt-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2>Log in</h2>
    <p class="lead">Nice to meet you.</p>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Email Adress", required: "required" %> 
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password, autocomplete: "current-password",class: "form-control",placeholder: "Password", required: "required"%>
      </div>
    </div>
    
    <div class="form-group">
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-outline-dark btn-block btn-lg"%>
      </div>
    </div>
  <% end %>
  <div class="text-center">
  Don't have an account?
  <%= render "devise/shared/links" %>
  </div>
</div>